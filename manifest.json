{
  "name": "Spotify Widget",
  "description": "Spotify widget in chrome extensions",
  "version": "1.0",
  "manifest_version": 3,

  "action": {
    "default_title": "Click to open panel"
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/contentScript.js"]
    }
  ],
  "permissions": ["activeTab", "scripting"]
}
